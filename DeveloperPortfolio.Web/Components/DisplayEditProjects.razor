@inherits DisplayProjectsBase

@foreach (var item in Projects)
{
    <div class="col-md-3 mb-2">
        <div>
            <img class="img-thumbnail" src="@item.ImageUrl">
            <h5 class="card-title mb-3">
                @item.Name
            </h5>  
            <div class="d-flex justify-content-around">
                <div>
                    <button @onclick="(() => DeleteProject_Click(item.Id))"
                            class="btn btn-danger">
                        <i class="fa fa-trash" />
                    </button>
                </div>
                <div>
                    <button @onclick="(() => EditProject_Click(item.Id))"
                            class="btn btn-dark">
                        Edit
                    </button>
                </div>
            </div>            
        </div>
    </div>
}
