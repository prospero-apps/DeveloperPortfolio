@page "/"
@inherits ProjectsBase

<h2>My Projects</h2>

@if(Projects == null)
{
    <h3>Loading projects...</h3>
}
else
{
    <h3 class="mb-5">Projects</h3>

    var projectCount = Projects.Count();

    @if(projectCount > 0)
    {
        const int itemsPerRow = 4;
        var projectRowList = new List<ProjectDto>();

        @for (int i = 0; i < projectCount; i++)
        {
            projectRowList = Projects.Skip(i * itemsPerRow).Take(itemsPerRow).ToList();

            <div class="row mt-3">
                @foreach(var item in projectRowList)
                {
                    <div class="col-md-3 mb-2">
                        <a href="#">
                            <div class="card">
                                <img class="img-thumbnail" src="@item.ImageUrl">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">
                                        @item.Name
                                    </h5>
                                    @foreach(var tech in item.Techs)
                                    {
                                        <div>
                                            <i class="@tech.Icon"/>
                                        </div>
                                    }
                                    <p>@item.Description</p>
                                    @foreach(var link in item.Links)
                                    {
                                        <div>
                                            <i class="@link.Icon"/>
                                        </div>
                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    }    
}
