@page "/UpdateCategory/{Id:int}"
@inherits UpdateCategoryBase

<h3>Update Category</h3>
@if (CategoryDto == null && ErrorMessage == null)
{
    <LoadingSpinner />
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage" />
}
else
{
    <EditForm Model="@CategoryDto" OnSubmit="@UpdateCategory_Submit" class="card card-body bg-light mt-5">
        <div class="form-group row">
            <label for="name" class="col-md-2 col-form-label">Name:</label>
            <div class="col-md-10">
                <InputText id="name" class="form-control" @bind-Value="CategoryDto.Name" />
            </div>
        </div>
        <div class="form-group row">
            <label for="icon" class="col-md-2 col-form-label">Icon:</label>
            <div class="col-md-10">
                <InputText id="icon" class="form-control" @bind-Value="CategoryDto.Icon" />
            </div>
        </div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </EditForm>
}

