@inherits TechsNavMenuBase

@if (TechDtos == null && ErrorMessage == null)
{
    <LoadingSpinner />
}
else if (ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage" />
}
else
{
    @foreach (var tech in TechDtos)
    {
        var link = "/ProjectsByTech/" + tech.Id;

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@link">
                <span class="@tech.Icon"></span>&nbsp;@tech.Name
            </NavLink>
        </div>
    }
}

